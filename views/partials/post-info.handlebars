<article class="post">
  <div class="title">
    <a href="/post/{{id}}">{{title}}</a>
    <span>({{format_date created_at}})</span>
  </div>
  <div class="meta">
    {{user.username}}
  </div>
  <div class="content">
    {{content}}
    <a href="/">{{comments.length}} {{format_plural "comment" comments.length}}</a>
  </div>
</article>